<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/also_known_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/also_known_label_id"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/ingredients_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_ingredients_label"
            app:layout_constraintTop_toBottomOf="@id/also_known_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ingredients_label_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/place_of_origin_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_place_of_origin_label"
            app:layout_constraintTop_toBottomOf="@id/ingredients_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/place_of_origin_label_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/description_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_description_label"
            app:layout_constraintTop_toBottomOf="@id/origin_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_label_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16dp"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
